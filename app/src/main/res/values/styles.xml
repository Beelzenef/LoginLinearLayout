<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginTheme" parent="AppTheme">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Creando un estilo para crear compatibilidad con SDKs anteriores -->
    <!-- Creamos jerarquia -->
    <style name="Widget" parent="@android:style/Widget"/>
    <style name="Widget.Button" parent="@android:style/Widget"/>
    <style name="Widget.Button.Transparent" parent="@android:style/Widget">
        <!-- Anulamos valor de background porque es propio de cada boton -->
        <item name="android:background">@null</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="LoginEditText">
        <item name="android:padding">10dp</item>
    </style>

    <style name="CheckBox_RememberMe" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:checkboxStyle">@android:color/darker_gray</item>
    </style>

</resources>
